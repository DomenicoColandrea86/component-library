		"tsdx": "^0.13.1",
		"typescript": "^3.7.5",
		"use-throttle": "^0.0.3"
	},
	"resolutions": {
		"@types/react": "16.9.19",
		"@types/react-dom": "16.9.5",
		"@types/lodash": "^4.14.149"
	},
	"workspaces": [
		"packages/*"
	],
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"changelog": {
		"labels": {
			"breaking-change": "üî® Breaking Changes",
			"bug": "üêõ Bugfixes",
			"potential-bug": "üêõ Bugfixes",
			"docs": "üìù Documentation",
			"feature": "üöÄ Features",
			"enhancement": "‚ú® Enhancements",
			"housekeeping": "üè° Housekeeping"
		}
	},
	"eslintConfig": {
		"extends": [
			"react-app"
		],
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"globals": {
			"__DEV__": "readonly"
		},
		"rules": {
			"no-unused-vars": [
				1,
				{
					"args": "after-used",
					"ignoreRestSiblings": true,
					"argsIgnorePattern": "^(event|_)$"
				}
			],
			"import/first": 0,
			"jsx-a11y/no-static-element-interactions": [
				1,
				{
					"handlers": [
						"onClick",
						"onMouseDown",
						"onMouseUp",
						"onKeyPress",
						"onKeyDown",
						"onKeyUp"
					]
				}
			]
		}
	},
	"eslintIgnore": [
		"node_modules",
		"packages/*/dist"
	],
	"jest": {
		"globals": {
			"__DEV__": "boolean"
		},
		"collectCoverageFrom": [
			"packages/**/src/**/*.{js,ts,tsx}"
		],
		"coverageDirectory": "./test-reports/unit-test-coverage",
		"reporters": [
			"jest-standard-reporter"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json"
		],
		"moduleNameMapper": {
			"\\$test(.*)$": "<rootDir>/test/$1",
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|html)$": "<rootDir>/__mocks__/fileMock.ts",
			"\\.(scss|css|less)$": "<rootDir>/__mocks__/styleMock.ts"
		},
		"setupFilesAfterEnv": [
			"<rootDir>/test/setupTests.ts"
		]
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 2,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"bracketSpacing": true
	},
	"engines": {
		"node": "^12.10.0",
		"npm": "^6.12"
	}
}
