		"react-docgen-typescript-loader": "^3.6.0",
		"react-dom": "^16.12.0",
		"react-is": "^16.12.0",
		"react-router": "^5.1.2",
		"react-router-dom": "^5.1.2",
		"react-spring": "^8.0.27",
		"react-test-renderer": "^16.12.0",
		"rollup-plugin-postcss": "^2.5.0",
		"rollup-plugin-scss": "^2.1.0",
		"sass-loader": "^7.0.0",
