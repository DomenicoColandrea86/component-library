{
	"bail": true,
	"collectCoverageFrom": ["./src/**/*.{js,ts}"],
	"coveragePathIgnorePatterns": ["./src/tests/"],
	"coverageDirectory": "./test-reports/unit-test-coverage",
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
	"reporters": ["jest-standard-reporter"],
	"moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
	"moduleNameMapper": {
		"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|html)$": "<rootDir>/src/__mocks__/fileMock.ts",
		"\\.(scss|css|less)$": "<rootDir>/src/__mocks__/styleMock.ts"
	}
}
